{% extends 'form_div_layout.html.twig' %}

{# Labels #}
{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label class="col-md-4 control-label" {% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ id|replace({'_':'.'})|trans }}</label>
{% endspaceless %}
{% endblock form_label %}



{% block form_widget_simple %}
{% spaceless %}
	{% set type = type|default('text') %}
		<div class="col-md-4">
	    	<input {% if type != 'file' %}class="form-control"{% else %}class="input-md"{% endif %} id="{{ id }}" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
	  	</div>
{% endspaceless %}
{% endblock form_widget_simple %}

{% block form_row %}
{% spaceless %}
	<div class="form-group {% if errors|length > 0 %}has-error{% endif %}">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{# Textarea #}
{% block textarea_widget %}
{% spaceless %}
    <div class="col-md-4">
    <textarea {{ block('widget_attributes') }} class="form-control">{{ value }}</textarea>
    </div>
{% endspaceless %}
{% endblock textarea_widget %}


{# Select #}
{% block choice_widget_collapsed %}
{% spaceless %}

    <div class="col-md-4">
    <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %} class="select-block primary">
        {% if empty_value is not none %}
            <option value="">{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
    </div>
{% endspaceless %}
{% endblock choice_widget_collapsed %}

{# Date #}
{% block date_widget %}
{% spaceless %}
<div class="input-group col-md-4">
    <span class="input-group-btn">
        <button class="btn" type="button"><span class="fui-calendar"></span></button>
    </span>
    <input type="text" class="form-control has-datepicker" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value}}"{% endif %} />
</div>
{% endspaceless %}
{% endblock date_widget %}

{# checkbox #}
{% block checkbox_widget %}
{% spaceless %}
{% if form.parent.vars.compound|length == 1 %}
<div class="col-md-4">
    <input type="checkbox" {{ block('widget_attributes') }} data-toggle="switch" {% if value is defined %} value="{{ value }}"{% endif %}{% if form.vars.checked %} checked="checked"{% endif %}/>
</div>
{% else %}
<input type="checkbox" {{ block('widget_attributes') }} {% if value is defined %} value="{{ value }}"{% endif %}{% if form.vars.checked %} checked="checked"{% endif %}/>
{% endif %}
{% endspaceless %}
{% endblock checkbox_widget %}

